<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="◦ Additional Control before running Image Logger"
        android:textSize="12sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <CheckBox
        android:id="@+id/cbtn_img_no_sleep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="No Sleep"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <CheckBox
        android:id="@+id/cbtn_img_rezero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="ReZero"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="◦ Text Highlight Threshold"
        android:textSize="12sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value 1 :"
            android:layout_marginLeft="8dp"
            tools:ignore="HardcodedText,RtlHardcoded,NestedWeights" />

        <EditText
            android:id="@+id/edit_img_threshold_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:ems="4"
            android:imeOptions="actionDone"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlHardcoded,LabelFor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value 2 :"
            android:layout_marginLeft="8dp"
            tools:ignore="HardcodedText,RtlHardcoded,NestedWeights" />

        <EditText
            android:id="@+id/edit_img_threshold_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:ems="4"
            android:imeOptions="actionDone"
            android:inputType="numberSigned"
            android:textAlignment="center"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlHardcoded,LabelFor" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="◦ Displayed Image Type"
        android:textSize="12sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <RadioGroup
        android:id="@+id/rbtn_img_frame_type"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/rbtn_img_frame_current_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Current Frame"
            android:textSize="11sp"
            tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

        <RadioButton
            android:id="@+id/rbtn_snr_frame_max_pixel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Max. Pixels"
            android:textSize="11sp"
            tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

        <RadioButton
            android:id="@+id/rbtn_snr_frame_min_pixel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Min. Pixels"
            android:textSize="11sp"
            tools:ignore="HardcodedText,RtlHardcoded,SmallSp" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="◦ Displayed Image Rotation"
        android:textSize="12sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <CheckBox
        android:id="@+id/cbtn_img_do_rotation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="180° Rotation"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="◦ Property of Log Saving"
        android:textSize="12sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <CheckBox
            android:id="@+id/cbtn_img_log_saving"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_weight="1"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:id="@+id/text_img_log"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="Folder: "
            android:layout_marginLeft="4dp"
            android:layout_weight="2"
            android:textSize="12sp"
            tools:ignore="HardcodedText,RtlHardcoded,NestedWeights" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="◦ Real-Time Showing Images"
        android:textSize="12sp"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <CheckBox
            android:id="@+id/cbtn_img_realtime_showing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Enable"
            android:textSize="14sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="* Enabling may decrease the report rate"
            android:layout_marginLeft="4dp"
            android:layout_weight="2"
            android:textSize="10sp"
            android:textColor="#ff505050"
            tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SmallSp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_img_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="Start"
            android:textAllCaps="true"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />

        <Button
            android:id="@+id/btn_img_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="exit"
            android:textAllCaps="true"
            tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />
    </LinearLayout>

</LinearLayout>