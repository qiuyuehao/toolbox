<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Synaptics Device Interface"
                android:layout_marginLeft="8dp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/setting_dev_err"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginLeft="10dp"
                android:textAlignment="textEnd"
                android:textColor="@android:color/background_light"
                android:textSize="10sp"
                tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SmallSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/setting_cbox_dev_rmi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="RMI"
                android:layout_weight="1"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/setting_edit_dev_rmi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlHardcoded,LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/setting_cbox_dev_tcm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TCM"
                android:layout_weight="1"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/setting_edit_dev_tcm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="3"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlHardcoded,LabelFor" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dp"
            android:background="#ff656565"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/setting_cbox_log_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Save Log File"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/setting_cbox_log_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginLeft="10dp"
                android:textAlignment="textEnd"
                android:textColor="@android:color/background_light"
                android:textSize="10sp"
                tools:ignore="HardcodedText,NestedWeights,RtlHardcoded,SmallSp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Folder : "
                android:layout_marginLeft="8dp"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                tools:ignore="HardcodedText,RtlHardcoded,NestedWeights" />

            <EditText
                android:id="@+id/setting_edit_log_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:imeOptions="actionDone"
                android:hint="input the directory where the log is placed"
                android:inputType="text"
                android:textSize="14sp"
                tools:ignore="HardcodedText,RtlHardcoded,LabelFor" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_marginTop="10dp"
            android:background="#ff656565"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="OK"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>




</android.support.constraint.ConstraintLayout>